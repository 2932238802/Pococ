<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:orientation="vertical"
    android:paddingTop="24dp">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_ripple"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_revert"
            android:rotation="180"
            app:tint="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- 分组标题：General -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常规设置"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- 卡片容器 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <!-- 背景音乐 -->
                    <LinearLayout
                        android:id="@+id/btnMusic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="18dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <!-- 图标容器，更精致 -->
                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_blue"
                            android:padding="6dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_media_play"
                                app:tint="#2196F3"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="背景音乐"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchMusic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:theme="@style/Theme.AppCompat.Light"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginStart="52dp"/>

                    <!-- 提前提醒 -->
                    <LinearLayout
                        android:id="@+id/btnReminderOffset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="18dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_orange"
                            android:padding="6dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_lock_idle_alarm"
                                app:tint="#FF9800"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="提前提醒"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/tvReminderValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="准时"
                            android:textColor="#888888"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:rotation="-90"
                            app:tint="#CCCCCC"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于与反馈"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <!-- 功能建议 -->
                    <LinearLayout
                        android:id="@+id/adviceBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="18dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:padding="6dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_menu_edit"
                                app:tint="#4CAF50"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="功能建议 / 反馈"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:rotation="-90"
                            app:tint="#CCCCCC"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginStart="52dp"/>

                    <LinearLayout
                        android:id="@+id/sourceCodeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="18dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_dark"
                            android:padding="6dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="#212121"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="GitHub 源码"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:rotation="-90"
                            app:tint="#CCCCCC"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginStart="52dp"/>

                    <LinearLayout
                        android:id="@+id/aboutBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="18dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_purple"
                            android:padding="6dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_menu_info_details"
                                app:tint="#9C27B0"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="关于 Poco List"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:rotation="-90"
                            app:tint="#CCCCCC"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/btnLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登出当前账号"
                        android:textColor="#D32F2F"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Version 1.0.0"
        android:textColor="#B0B0B0"
        android:textSize="12sp"
        android:paddingBottom="16dp"/>

</LinearLayout>
