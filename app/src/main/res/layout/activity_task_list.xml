<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCT 01, 2026"
                android:textColor="?android:attr/textColorSecondary"
                android:letterSpacing="0.15"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDate"
                android:layout_marginTop="4dp"
                android:text="My Tasks"
                android:textColor="?attr/colorOnBackground"
                android:textSize="36sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/tvTitle"
                android:layout_marginBottom="8dp"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="?attr/colorOnBackground" />

            <ImageView
                android:id="@+id/btnDeleteCompleted"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@id/btnSettings"
                android:contentDescription="清理已完成"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="?attr/colorOnBackground" />
        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:tabIndicatorColor="?attr/colorOnBackground"
            app:tabSelectedTextColor="?attr/colorOnBackground"
            app:tabTextColor="?android:attr/textColorSecondary"
            app:tabMode="fixed"
            app:tabGravity="fill"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="32dp"
        android:text="Loading..."
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:ellipsize="end"
        android:maxLines="3" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="?android:attr/colorBackground"
        app:backgroundTint="?attr/colorOnBackground" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
